# ===============================
#        CONFIGURAÇÕES API
# ===============================
API_TITLE="Analisador de Viabilidade Geoespacial API"
API_DESCRIPTION="API para análise de viabilidade geoespacial"
API_VERSION="2.4.0"

DEBUG=false


# ===============================
#        CONFIGURAÇÃO CORS
# ===============================
# Exemplo: "*" ou múltiplos separados por vírgula
CORS_ORIGINS=*,http://localhost:3000


# ===============================
#      CONFIG PADRÃO DE ANÁLISE
# ===============================
DEFAULT_RAIO_KM=0
DEFAULT_COLUNA_COORD=COORDENADAS
DEFAULT_COLUNA_VELOCIDADE=VELOCIDADE
DEFAULT_TIPO_BUSCA=3


# ===============================
#            DIRETÓRIOS
# ===============================
UPLOADS_DIR=uploads
RESULTS_DIR=results
KMZ_DIR=kmzs

# ===============================
#      EXTENSÕES PERMITIDAS
# ===============================
ALLOWED_EXTENSIONS=xlsx

# ===============================
#     CONFIG DE LIMITE DE ARQUIVO
# ===============================
MAX_UPLOAD_SIZE_MB=50


# ===============================
#        CONFIG SERVIDOR
# ===============================
API_PORT=8000


# ===============================
#          BANCO DE DADOS
# ===============================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=analysis_db
DB_POOL_SIZE=5
DB_POOL_RECYCLE=280
